{
  "manifest_version": 2,

  "name": "OpenVideo FastStream",
  "short_name": "OpenVideo",
  "description": "__MSG_extDescr__",
  "version": "1.10",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_action": {
    "default_icon": "assets/icons/logo256.png",
    "default_popup": "html/PopupMenu/PopupMenu.html"
  },
  "options_ui": {
    "page": "html/OptionsSite/OptionsSite.html"
  },
  "applications": {
	  "gecko": {
	    "id": "OpenVideoFS@gmail.com"
	  }
	},
   "icons": { 
        "16":"assets/icons/logo16.png", 
        "48":"assets/icons/logo48.png", 
        "64":"assets/icons/logo64.png", 
        "128":"assets/icons/logo128.png",
        "256":"assets/icons/logo256.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
    	"assets/js/openvideo.js",
    	"assets/js/redirect_script_base.js",
    	"RedirectScripts.js",
    	"assets/js/bgscript.js"
    ]
  },
  "permissions": [
  	"storage",
  	"webRequest",
  	"webRequestBlocking",
    "<all_urls>",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "downloads",
    "proxy"
  ],
  
  "web_accessible_resources": [
  	"html/VidPlaySite/VidPlaySite.html",
  	"html/VideoPopup/VideoPopup.html",
  	"html/VideoPopup/VideoPopup.css",
  	"html/LibrarySite/LibrarySite.html"
  ],
   "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
    	"assets/js/openvideo.js",
    	"assets/js/redirect_script_base.js",
    	"RedirectScripts.js",
      	"assets/js/document_start.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": [
      
      	"assets/js/video_popup.js",
      	"assets/js/theatre_mode.js",
      	"assets/js/ov_metadata.js"
      ],
      "css": [
      	"/assets/css/csVideoPopup.css"
      ],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": [
    	"assets/js/openvideo.js",
    	"assets/js/redirect_script_base.js",
    	"RedirectScripts.js",
      	"assets/js/document_idle.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": [
    	"assets/js/openvideo.js",
    	"assets/js/redirect_script_base.js",
    	"RedirectScripts.js",
      	"assets/js/document_end2.js",
      	"assets/js/video_search.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}